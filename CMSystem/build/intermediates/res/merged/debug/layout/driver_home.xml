<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#45DCF1"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tcxtsrvice_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Service Requests :"
        android:textColor="#fff"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="20dp"
         />

    <ListView
        android:id="@+id/listreqsts"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@+id/tcxtsrvice_view"
        android:layout_centerHorizontal="true" >
    </ListView>

    <CheckBox
        android:id="@+id/CheckBoxlcshare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBoxlcserv"
        android:layout_below="@+id/checkBoxlcserv"
        android:layout_marginTop="17dp"
        android:text="Share My Location"
        android:textColor="#fff"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/checkBoxlcserv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listreqsts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="Location Service"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listreqsts"
        android:layout_marginTop="25dp"
      android:layout_marginLeft="15dp"
       
        android:text="Drive Settings :"
        android:textColor="#fff"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btlgt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CheckBoxlcshare"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        
        android:text="Logout"
        android:textColor="#fff"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="20dp" />

</RelativeLayout>
